<% if @user.errors.any? %>
  <%= pluralize(@user.errors.count, "error") %> prevented your account from being created:
  <ul>
    <% @user.errors.full_messages.each do |error_message| %>
      <li><%= error_message %></li>
    <% end %>
  </ul>
<% end %>

<div class='form-box'>
  <%= form_for @user do |form| %>
    <div id='signup_first_step'>
      <%= form.label :username %>
      <%= form.text_field :username, require: true %>
    </div>
    <div id='signup_second_step'>
      <%= form.label :email %>
      <%= form.email_field :email, require: true %>
    </div>
    <div id='signup_third_step'>
      <%= form.label :password %>
      <%= form.password_field :password, require: true %>
    </div>
    <div id='signup_fourth_step'>
      <%= form.submit "Sign up", class: 'full-width-transparent-button' %>
    </div>
  <% end %>
</div>
