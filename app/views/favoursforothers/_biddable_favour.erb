<li class='row'>
  <div class='col-md-4'>
    <%= favour.description %>
  </div>
  <div class='col-md-8'>
    <%= form_for [favour, new_bid] do |f| %>
      <%= f.label :amount, "Number of thank you points" %>
      <%= f.number_field(:amount, in: 1.0..100.0) %>
      <%= f.submit "Bid", class: 'bid-button' %>
    <% end %>
  </div>
</li>