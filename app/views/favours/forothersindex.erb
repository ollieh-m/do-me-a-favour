<div class='favours-i-can-bid-on'>
  <% unless flash[:errors].nil? %>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
  <% end %>
  <% @bid_on_favours.each do |favour| %>
    <li><%= favour.description %>
      <%= form_for [favour, @bid] do |f| %>
        <%= f.label :amount, "Number of thank you points" %>
        <%= f.number_field(:amount, in: 1.0..100.0) %>
        <%= f.submit "Bid" %>
      <% end %>
    </li>
  <% end %>
</div>

<div class='favours-i-bidded-on'>
  <% @bidded_on_favours.each do |favour| %>
    <li>
      <%= favour.description %>
      <p class='status'>
        <%= favour.forothersindex_status(user: current_user) %>
      </p>
    </li>
  <% end %>
</div>